<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/fundo_entrada"
        tools:ignore="ContentDescription" />

   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <Button
            android:id="@+id/btn_cadastrar"
            style="@style/CustomActionBarTheme"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/btn_cadastrar"
            android:textColor="@android:color/white"
            android:onClick="clickCadastrar" />

        <Button
            android:id="@+id/btn_entrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/btn_cadastrar"
            android:layout_alignRight="@+id/btn_cadastrar"
            android:layout_below="@+id/btn_cadastrar"
            android:onClick="clickEntrar"
            android:text="@string/btn_entrar"
            android:textColor="@android:color/white" />

     
    </RelativeLayout>

</FrameLayout>