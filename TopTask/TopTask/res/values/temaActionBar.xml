<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
   
    <!-- the theme applied to the application or activity -->
    <style name="TemaAPP"
           parent="android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBar_Style</item>
        <item name="android:actionBarTabTextStyle">@style/ActionBar_TabText_Style</item>
        <item name="android:actionMenuTextColor">@android:color/black</item>
    </style>

    <!-- ActionBar styles -->
    <style name="ActionBar_Style"
           parent="@android:style/Widget.Holo.Light.ActionBar">
        
        <item name="android:titleTextStyle">@style/ActionBar_TitleText_Style</item>
       
    </style>

    <!-- ActionBar title text -->
    <style name="ActionBar_TitleText_Style"
           parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- ActionBar tabs text styles -->
    <style name="ActionBar_TabText_Style"
           parent="@android:style/Widget.Holo.Light.ActionBar.TabText">
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>